<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".water_heater">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/norwester"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:textColor="@color/light_yellow"
                    android:layout_marginBottom="10dp"
                    android:text="SMART SOLAR"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/norwester"
                    android:textSize="40dp"
                    android:textColor="@color/light_yellow"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:text="WATER HEATER"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/glacialindifference"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_marginBottom="10dp"
                    android:text="Pemanas air yang menggunakan energi panas matahari sebagai sumber utamanya. Menggunakan sistem CERDAS dengan beberapa fitur bawaan seperti pendeteksi suhu air, pendeteksi volume air, pembuka/penutup kran otomatis."/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F E A T U R E D"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/norwester"
            android:layout_marginLeft="50dp"
            android:textColor="@color/dark_blue"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P R O D U C T S"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/norwester"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_gravity="center"
                android:rowCount="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="125dp"
                        android:layout_height="150dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        app:cardElevation="20dp"
                        android:layout_gravity="fill"
                        app:cardBackgroundColor="@color/black"
                        android:elevation="8dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="10dp"
                            android:background="@drawable/rounder_corner_lightyellow"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/gelas" />

                            <ImageView
                                android:id="@+id/shape1"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/shape_persen"/>

                            <TextView
                                android:id="@+id/volume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/shape1"
                                android:layout_alignTop="@+id/shape1"
                                android:layout_alignRight="@+id/shape1"
                                android:layout_alignBottom="@+id/shape1"
                                android:layout_marginStart="1dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="17dp"
                                android:layout_marginBottom="1dp"
                                android:fontFamily="@font/norwester"
                                android:gravity="center"
                                android:text="26"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginEnd="1dp"
                                android:layout_marginBottom="1dp"
                                android:layout_toEndOf="@id/volume"
                                android:fontFamily="@font/norwester"
                                android:gravity="center"
                                android:text="%"
                                android:textColor="#000000"
                                android:textSize="20dp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/norwester"
                        android:text="VOLUME"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="125dp"
                        android:layout_height="150dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        app:cardElevation="20dp"
                        android:layout_gravity="fill"
                        app:cardBackgroundColor="@color/black"
                        android:elevation="8dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="@drawable/rounder_corner_lightyellow" android:padding="5dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/temperature" />

                            <ImageView
                                android:id="@+id/shape2"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/shape_suhu" />

                            <TextView
                                android:id="@+id/suhu_air"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/shape2"
                                android:layout_alignTop="@+id/shape2"
                                android:layout_alignRight="@+id/shape2"
                                android:layout_alignBottom="@+id/shape2"
                                android:layout_marginStart="1dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="17dp"
                                android:layout_marginBottom="1dp"
                                android:fontFamily="@font/norwester"
                                android:gravity="center"
                                android:text="37"
                                android:textColor="#000000"
                                android:textSize="20dp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/norwester"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:text="TEMPERATURE"/>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/elemen"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/layoutHeater"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounderd_grey_full"
                android:layout_margin="6dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/heater_icon_tr"
                    android:layout_margin="10dp">
                </ImageView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/am_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/norwester"
                android:text="MANUAL"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"></TextView>
            <Switch
                android:id="@+id/on_off_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textOff="OFF"
                android:textOn="ON"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>